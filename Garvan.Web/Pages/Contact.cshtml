@page
@model ContactModel
<div id="contacts-div">
    <h2>@Resources.Contacts</h2>
    <h4>Ask us anything by mail, phone call or direct message.</h4>

    <div class="contacts-row">
        <div class="input-wrapper col-md-6">
            <span class="input-label">Name:</span>
            <input type="text" id="name-input" />
        </div>
        <div class="input-wrapper col-md-6">
            <span class="input-label">E-mail:</span>
            <input type="text" id="email-input" style="width: 100%;" />
        </div>
    </div>
    <div class="contacts-row">
        <div class="input-wrapper">
            <span class="input-label">Subject:</span>
            <input type="text" id="subject-input" style="width: 100%;" />
        </div>
    </div>
    <address>
        One Microsoft Way<br />
        Redmond, WA 98052-6399<br />
        <abbr title="Phone">P:</abbr>
        425.555.0100
    </address>
</div>