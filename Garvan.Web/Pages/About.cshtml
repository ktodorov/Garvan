@page
@model AboutModel
@{
    ViewData["Title"] = Resources.AboutUs;
}
<div id="about-page">
    <div id="about-div" class="row">
        <div class="col-md-2"></div>
        <div id="about-div-wrapper" class="col-md-5">
            <h1>@Resources.AboutUs</h1>
            <h3>Everything we do, we believe in better gaming world.</h3>

            <div id="about-info-wrapper">
                <div id="info-text-wrapper">
                    <span class="capitalized-letter">T</span>his gaming world will be enhanced through our beautiful designed products.
                    The first step towards improving the gaming experience is to remove the Cable Monster out of your desk!
                </div>

                <div id="your-world-wrapper">
                    Because it’s <b>Your World!</b>
                </div>

                <button id="shop-button" class="garvan-button">Shop now</button>
            </div>

        </div>
        <div class="col-md-5">
            <img id="hand-cable-img" class="align-bottom" src="~/images/pictures/hand_cable.png" />
        </div>
    </div>

    @{await Html.RenderPartialAsync("Partials/Subscribe", new Garvan.Web.Pages.Partials.SubscribePartialModel());}
</div>