@page
@model ErrorModel
@{
    ViewData["Title"] = Resources.Error;
}

@{
    if (Model == null)
    {
        return;
    }

    var statusmessage = string.Empty;
    var statusCode = Model.StatusCode;
    switch (Model.StatusCode)
    {
        case 400:
            statusmessage = Resources.Error400;
            break;
        case 403:
            statusmessage = Resources.Error403;
            break;
        case 404:
            statusmessage = Resources.Error404;
            break;
        case 408:
            statusmessage = Resources.Error408;
            break;
        case 500:
            statusmessage = Resources.Error500;
            break;
        default:
            statusCode = 500;
            statusmessage = Resources.ErrorOther;
            break;
    }
}
<div id="error-page-wrapper">
    <h1>@Resources.Error @statusCode</h1>
    <h2>@statusmessage</h2>
</div>